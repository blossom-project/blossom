{
  "settings": {
    "number_of_shards": "1",
    "number_of_replicas": "0",
    "index": {
      "analysis": {
        "filter": {
          "suggest_edgengram_filter": {
            "type": "edgeNGram",
            "min_gram": 1,
            "max_gram": 20
          }
        },
        "analyzer": {
          "email": {
            "tokenizer": "lowercase",
            "filter": [
              "lowercase",
              "suggest_edgengram_filter"
            ]
          },
          "default": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding",
              "elision"
            ]
          },
          "suggest": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding",
              "elision",
              "suggest_edgengram_filter"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "role": {
      "properties": {
        "id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "name": {
          "type": "string",
          "analyzer": "suggest",
          "search_analyzer": "default"
        },
        "description": {
          "type": "string",
          "analyzer": "default",
          "search_analyzer": "default"
        },
        "creationDate": {
          "type": "long"
        },
        "modificationDate": {
          "type": "long"
        },
        "creationUser": {
          "type": "string",
          "index": "not_analyzed"
        },
        "modificationUser": {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  }
}
}
